{
  "name": "mealworm-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm-run-all build serve",
    "serve": "node ./dist/index",
    "watch": "nodemon",
    "clean": "rimraf functions",
    "transpile": "babel ./src --out-dir dist",
    "posttranspile": "cp functions.package.json functions/package.json && cd functions && npm install",
    "build": "npm-run-all clean transpile",
    "test": "jest",
    "functions:clean": "rimraf functions",
    "functions:transpile": "babel ./src --out-dir functions --copy-files --ignore 'node_modules'",
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.1",
    "morgan": "~1.9.1",
    "swagger-ui-express": "^4.1.4",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "jest": "^25.4.0",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "nodemonConfig": {
    "exec": "npm run start",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "10"
          }
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": "10.x"
  }
}
